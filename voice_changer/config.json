{
    "openai_api_key": "YOUR_OPENAI_API_KEY_HERE",
    "server": {
        "host": "0.0.0.0",
        "port": 5000,
        "debug": true
    },
    "audio": {
        "sample_rate": 44100,
        "channels": 1,
        "chunk_size": 1024,
        "format": "int16"
    },
    "tts": {
        "model": "tts-1-hd",
        "default_voice": "alloy",
        "default_speed": 1.0
    },
    "limits": {
        "max_file_size_mb": 25,
        "max_recording_minutes": 5,
        "max_tts_characters": 4096
    },
    "storage": {
        "cleanup_after_hours": 24,
        "max_storage_gb": 10
    }
}